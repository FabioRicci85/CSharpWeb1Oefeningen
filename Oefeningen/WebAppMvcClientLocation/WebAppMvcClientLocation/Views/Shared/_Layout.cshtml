<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebAppMvcClientLocation</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebAppMvcClientLocation.styles.css" asp-append-version="true" />
</head>
<body>
<header>
    <div>
        <h3>PXL - Oefening</h3>
    </div>
    
</header>
<div class="row m-1 p-1">
    <div id="menu"class="col-3 border border-primary">
        <a asp-controller="Home" asp-action="Index">Home</a>
        <br/>
        <a asp-controller="Client" asp-action="Index">Client</a>
        <br />
        <a asp-controller="Locations" asp-action="Index">Locations</a>
        <br />
        <a asp-controller="Overview" asp-action="Index">Overview</a>
    </div>
    <div id="main"class="col-9 border border-primary">
        @RenderBody()
    </div>
</div>

    <footer class="border-top footer text-muted">
        <div class="container">
            PXL - Oefening - @DateTime.Now.ToString("dd/MM/yyyy")
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
